	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to SPA / Mozilla Firefox",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/src"
		},
		{
			"name": "Attach to SPA / Google Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/src",
			"sourceMapPathOverrides": {
				"webpack:///./*": "${webRoot}/*",
				"webpack:///src/*": "${webRoot}/*",
				"webpack:///*": "*",
				"webpack:///./~/*": "${webRoot}/node_modules/*",
				"meteor://ðŸ’»app/*": "${webRoot}/*"
			}
		}
	]
}